@using YemekSiparisProje.Models;
@{
    ViewBag.Title = "Müşteri Düzenle";
}

<section id="menu" class="menu">
    <div class="container" data-aos="fade-up">
        <div class="tab-content" data-aos="fade-up" data-aos-delay="300">
            <div class="tab-pane fade active show" id="menu-breakfast">
                <div class="tab-header text-center">
                    <h3>Müşteri ID : @ViewBag.m.musteriID</h3>
                </div>
                <div class="row gy-5">
                    <div class="col-lg-6 mx-auto menu-item">
                        <form action="/Admin/Guncelle/" method="post">
                            <div class="form-group">
                                <label for="ad">İsim</label>
                                <input type="text" class="form-control" value="@ViewBag.m.ad" name="ad" id="ad">
                            </div><br />
                            <div class="form-group">
                                <label for="soyad">Soyisim</label>
                                <input type="text" class="form-control" value="@ViewBag.m.soyad" name="soyad" id="soyad">
                            </div><br />
                            <div class="form-group">
                                <label for="telNo">Telefon Numarası</label>
                                <input type="text" class="form-control" value="@ViewBag.m.telNo" name="telNo" id="telNo">
                            </div><br />
                            <div class="form-group">
                                <label for="eposta">Eposta</label>
                                <input type="text" class="form-control" value="@ViewBag.m.eposta" name="eposta" id="eposta">
                            </div><br />
                            <div class="form-group">
                                <label for="sifre">Şifre</label>
                                <input type="text" class="form-control" value="@ViewBag.m.sifre" name="sifre" id="sifre">
                            </div><br />
                            <div class="form-group">
                                <label for="ilID">İl</label>
                                <select class="form-control" id="ilID" name="ilID">
                                    @foreach (il i in ViewBag.i)
                                    {
                                        if (i.ilID == ViewBag.m.ilID)
                                        {
                                            <option value=@i.ilID selected>@i.ilAdi</option>
                                        }
                                        else
                                        {
                                            <option value=@i.ilID>@i.ilAdi</option>

                                        }
                                    }
                                </select>
                            </div><br />
                            <div class="form-group">
                                <label for="ilceID">İlçe</label>
                                <select class="form-control" id="ilceID" name="ilceID">
                                    @foreach (ilce i in ViewBag.c)
                                    {
                                        if (i.ilceID == ViewBag.m.ilceID)
                                        {
                                            <option value=@i.ilceID selected>@i.ilceAdi</option>
                                        }
                                        else
                                        {
                                            <option value=@i.ilceID>@i.ilceAdi</option>

                                        }
                                    }
                                </select>
                            </div><br />
                            <div class="form-group">
                                <input type="hidden" class="form-control" value=false id="silindi" name="silindi">
                            </div>
                            <div class="form-group">
                                <input type="hidden" class="form-control" value=@ViewBag.m.musteriID id="ID" name="musteriID">
                            </div>
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                        </form>
                    </div><!-- Menu Item -->
                </div>
            </div><!-- End Breakfast Menu Content -->
        </div>
    </div>
</section>
