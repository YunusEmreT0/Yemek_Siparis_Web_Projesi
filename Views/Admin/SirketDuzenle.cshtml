@using YemekSiparisProje.Models;
@{
    ViewBag.Title = "Şirketi Ekle/Düzenle";
}


<section id="menu" class="menu">
    <div class="container" data-aos="fade-up">
        <div class="tab-content" data-aos="fade-up" data-aos-delay="300">
            <div class="tab-pane fade active show" id="menu-breakfast">

                @if (ViewBag.s != null)
                {
                    <div class="tab-header text-center">
                        <h3>Şirket ID : @ViewBag.s.sirketID</h3>
                    </div>
                    <div class="row gy-5">
                        <div class="col-lg-6 mx-auto menu-item">
                            <form action="/Admin/SGuncelle/" method="post">
                                <div class="form-group">
                                    <label for="ad">Şirket Adı</label>
                                    <input type="text" class="form-control" value="@ViewBag.s.sirketAdi" name="sirketAdi" id="ad">
                                </div><br />
                                <div class="form-group">
                                    <input type="hidden" class="form-control" value=false id="silindi" name="silindi">
                                </div>
                                <div class="form-group">
                                    <input type="hidden" class="form-control" value="@ViewBag.s.sirketID" id="ID" name="sirketID">
                                </div>
                                <button type="submit" class="btn btn-primary">Güncelle</button>
                            </form>
                        </div><!-- Menu Item -->
                    </div>
                }
                else
                {
                    <div class="tab-header text-center">
                        <h3>Şirket Ekle</h3>
                    </div>
                    <div class="row gy-5">
                        <div class="col-lg-6 mx-auto menu-item">
                            <form action="/Admin/SGuncelle/" method="post">
                                <div class="form-group">
                                    <label for="ad">Şirket Adı</label>
                                    <input type="text" class="form-control" name="sirketAdi" id="ad">
                                </div><br />
                                <div class="form-group">
                                    <input type="hidden" class="form-control" value=false id="silindi" name="silindi">
                                </div>
                                <div class="form-group">
                                    <input type="hidden" class="form-control" id="ID" name="sirketID">
                                </div>
                                <button type="submit" class="btn btn-primary">Ekle</button>
                            </form>
                        </div><!-- Menu Item -->
                    </div>
                }

            </div><!-- End Breakfast Menu Content -->
        </div>
    </div>
</section>

