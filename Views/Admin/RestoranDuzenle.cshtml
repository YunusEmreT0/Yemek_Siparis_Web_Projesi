@using YemekSiparisProje.Models;
@{
    ViewBag.Title = "Restoran Ekle/Düzenle";
}

<section id="menu" class="menu">
    <div class="container" data-aos="fade-up">
        <div class="tab-content" data-aos="fade-up" data-aos-delay="300">
            <div class="tab-pane fade active show" id="menu-breakfast">

                @if (ViewBag.s != null)
                {
                    <div class="tab-header text-center">
                        <h3>Restoran ID : @ViewBag.s.restoranID</h3>
                    </div>
                    <div class="row gy-5">
                        <div class="col-lg-6 mx-auto menu-item">
                            <form action="/Admin/RGuncelle/" method="post">
                                <div class="form-group">
                                    <label for="ad">Restoran Adı</label>
                                    <input type="text" class="form-control" value="@ViewBag.s.restoranAdi" name="restoranAdi" id="ad">
                                </div><br />
                                <div class="form-group">
                                    <label for="ilID">İl</label>
                                    <select class="form-control" id="ilID" name="ilID">
                                        @foreach (il i in ViewBag.il)
                                        {
                                            if (i.ilID == ViewBag.s.ilID)
                                            {
                                                <option value=@i.ilID selected>@i.ilAdi</option>
                                            }
                                            else
                                            {
                                                <option value=@i.ilID>@i.ilAdi</option>

                                            }
                                        }
                                    </select>
                                </div><br />
                                <div class="form-group">
                                    <label for="ilceID">İlçe</label>
                                    <select class="form-control" id="ilceID" name="ilceID">
                                        @foreach (ilce i in ViewBag.ilce)
                                        {
                                            if (i.ilceID == ViewBag.s.ilceID)
                                            {
                                                <option value=@i.ilceID selected>@i.ilceAdi</option>
                                            }
                                            else
                                            {
                                                <option value=@i.ilceID>@i.ilceAdi</option>

                                            }
                                        }
                                    </select>
                                </div><br />
                                <div class="form-group">
                                    <input type="hidden" class="form-control" value=false id="silindi" name="silindi">
                                </div>
                                <div class="form-group">
                                    <input type="hidden" class="form-control" value="@ViewBag.s.sirketID" id="sID" name="sirketID">
                                </div>
                                <div class="form-group">
                                    <input type="hidden" class="form-control" value="@ViewBag.s.restoranID" id="ID" name="restoranID">
                                </div>
                                <button type="submit" class="btn btn-primary">Güncelle</button>
                            </form>
                        </div><!-- Menu Item -->
                    </div>
                }
                else
                {
                    <div class="tab-header text-center">
                        <h3>Restoran Ekle</h3>
                    </div>
                    <div class="row gy-5">
                        <div class="col-lg-6 mx-auto menu-item">
                            <form action="/Admin/RGuncelle/" method="post">
                                <div class="form-group">
                                    <label for="ad">Restoran Adı</label>
                                    <input type="text" class="form-control" name="restoranAdi" id="ad">
                                </div><br />
                                <div class="form-group">
                                    <label for="ilID">İl</label>
                                    <select class="form-control" id="ilID" name="ilID">
                                        @foreach (il i in ViewBag.il)
                                        {
                                            <option value=@i.ilID>@i.ilAdi</option>
                                        }
                                    </select>
                                </div><br />
                                <div class="form-group">
                                    <label for="ilceID">İlçe</label>
                                    <select class="form-control" id="ilceID" name="ilceID">
                                        @foreach (ilce i in ViewBag.ilce)
                                        {
                                            <option value=@i.ilceID>@i.ilceAdi</option>
                                        }
                                    </select>
                                </div><br />
                                <div class="form-group">
                                    <input type="hidden" class="form-control" value=false id="silindi" name="silindi">
                                </div>
                                <div class="form-group">
                                    <input type="hidden" class="form-control" value="@ViewBag.sirket" id="sID" name="sirketID">
                                </div>
                                <button type="submit" class="btn btn-primary">Ekle</button>
                            </form>
                        </div><!-- Menu Item -->
                    </div>
                }

            </div><!-- End Breakfast Menu Content -->
        </div>
    </div>
</section>
